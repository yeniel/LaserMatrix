<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextMessage"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayoutSendButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMessage">

        <Button
            android:id="@+id/btnSend"
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnRepeat"
            android:text="Repetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnReset"
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutSendButtons">

        <ToggleButton
            android:id="@+id/btnRow1"
            android:text="1"
            android:textOn="1"
            android:textOff="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>


        <ToggleButton
            android:id="@+id/btnRow2"
            android:text="2"
            android:textOn="2"
            android:textOff="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <ToggleButton
            android:id="@+id/btnRow3"
            android:text="3"
            android:textOn="3"
            android:textOff="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <ToggleButton
            android:id="@+id/btnRow4"
            android:text="4"
            android:textOn="4"
            android:textOff="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <ToggleButton
            android:id="@+id/btnRow5"
            android:text="5"
            android:textOn="5"
            android:textOff="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <ToggleButton
            android:id="@+id/btnRow6"
            android:text="6"
            android:textOn="6"
            android:textOff="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <ToggleButton
            android:id="@+id/btnRow7"
            android:text="7"
            android:textOn="7"
            android:textOff="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <ToggleButton
            android:id="@+id/btnRow8"
            android:text="8"
            android:textOn="8"
            android:textOff="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutCalibrateActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutRows">

        <Button
            android:id="@+id/btnCorners"
            android:text="Esquinas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnAll"
            android:text="Todos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnSendAnimation"
            android:text="AnimaciÃ³n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTextActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutCalibrateActions">

        <Button
            android:id="@+id/btnWriteTwitter"
            android:text="Twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnClearTextEdit"
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutOtherActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutTextActions">

        <Button
            android:id="@+id/btnConnectToArduino"
            android:text="Conectar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1dp"
            android:layout_gravity="left"/>

    </LinearLayout>

</RelativeLayout>
